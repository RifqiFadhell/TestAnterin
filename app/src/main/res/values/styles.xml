<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff33b5e5</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ParentButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="UikitSecondaryButton" parent="ParentButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="strokeColor">@android:color/holo_blue_light</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="UikitPrimaryButton" parent="ParentButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@android:color/holo_blue_light</item>
    </style>

    <style name="UikitTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/black20</item>
        <item name="android:textColor">@color/black90</item>
        <item name="boxStrokeColor">@color/porcelain</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="UikitEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black90</item>
    </style>

</resources>
